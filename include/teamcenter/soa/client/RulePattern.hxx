/**
 * Naming rule pattern of the property. Naming Rule is used to specify the patterns
 * the property value has to follow.
 * <pre>
 * Example:
 *  object_name. Its Name Rule is: "CSTMNOTE-"nnnnnn.
 *   The object name has to be: CSTMNOTE - 123456.
 * </pre>
 *
 */
class TCSOACLIENTMNGD_API RulePattern 
{
public:
    virtual ~RulePattern();

    /**
     * Name rule patterns of the property name rule.
     * Example: Default Naming Rule for Custom Note item_id is "CSTMNOTE-"nnnnnn
     *
     * @return Name rule patterns of the property name rule.
     */
    virtual std::string getPattern() const = 0;

    /**
     * True if the rule has an auto-generated value.
     * @return True if the rule has an auto-generated value.
     */
    virtual bool isAutogenerated() const = 0;




    /**
     *  The initial value of a the auto-generated counter.
     *  If the rule does not have an auto-generated counter a -1 is returned.
     * @return The initial value of the auto-generated counter.
     */
    virtual int getInitialValue() const = 0;


    /**
     * The maximum value of a the auto-generated counter.
     * If the rule does not have an auto-generated counter a -1 is returned.
     * @return The maximum value of the auto-generated counter.
     */
     virtual int getMaximumValue() const =0;

    SOA_CLASS_NEW_OPERATORS

protected:
    RulePattern();

};

}}}//end namespace

#include <teamcenter/soa/client/SoaClientMngdUndef.h>

